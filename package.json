{
  "name": "monza-tech",
  "private": true,
  "version": "1.0.0",
  "description": "Monza TECH - Vehicle Management System",
  "author": "Monza TECH <samer@monzasal.com>",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "dev-light": "vite --host 127.0.0.1 --port 5174 --logLevel warn --clearScreen false",
    "dev-minimal": "NODE_OPTIONS='--max-old-space-size=2048' vite --host 127.0.0.1 --port 5173 --logLevel error --clearScreen false",
    "build": "vite build",
    "build:dev": "vite build --mode development",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:preview": "electron .",
    "upload:sample-data": "npx tsx scripts/uploadSampleData.ts",
    "upload:cars": "npx tsx scripts/uploadCarInventory.ts",
    "upload:monza-inventory": "npx tsx scripts/uploadMonzaInventory.ts",
    "upload:csv": "npx tsx scripts/csvToSupabase.ts",
    "upload:csv-preview": "npx tsx scripts/csvToSupabase.ts --preview",
    "db:migrate": "supabase db push",
    "db:reset": "supabase db reset --local"
  },
